<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skyray.waol2000.FragmentMaintain_ConnectionOut">

    <!--模式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="模式" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/form_padding">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/sm_intervalMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="间隔模式" />

                <RadioButton
                    android:id="@+id/sm_pointTimeMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整点模式" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <!--间隔时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/form_padding">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="间隔时间" />

        <EditText
            android:id="@+id/sm_intervalTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:hint="分钟"
            android:inputType="number"
            android:paddingLeft="@dimen/form_padding"
            android:textSize="@dimen/nh3n_textSize" />

    </LinearLayout>

    <!--整点时间选择-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="测量时间" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/sm_pointTimes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/form_padding">

            <TableRow>

                <CheckBox
                    android:id="@+id/sm_p0"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="0" />

                <CheckBox
                    android:id="@+id/sm_p1"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="1" />

                <CheckBox
                    android:id="@+id/sm_p2"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="2" />

                <CheckBox
                    android:id="@+id/sm_p3"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="3" />

                <CheckBox
                    android:id="@+id/sm_p4"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="4" />


            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/sm_p5"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="5" />

                <CheckBox
                    android:id="@+id/sm_p6"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="6" />

                <CheckBox
                    android:id="@+id/sm_p7"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="7" />

                <CheckBox
                    android:id="@+id/sm_p8"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="8" />

                <CheckBox
                    android:id="@+id/sm_p9"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="9" />


            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/sm_p10"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="10" />

                <CheckBox
                    android:id="@+id/sm_p11"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="11" />

                <CheckBox
                    android:id="@+id/sm_p12"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="12" />

                <CheckBox
                    android:id="@+id/sm_p13"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="13" />

                <CheckBox
                    android:id="@+id/sm_p14"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="14" />


            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/sm_p15"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="15" />

                <CheckBox
                    android:id="@+id/sm_p16"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="16" />

                <CheckBox
                    android:id="@+id/sm_p17"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="17" />

                <CheckBox
                    android:id="@+id/sm_p18"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="18" />

                <CheckBox
                    android:id="@+id/sm_p19"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="19" />


            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/sm_p20"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="20" />

                <CheckBox
                    android:id="@+id/sm_p21"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="21" />

                <CheckBox
                    android:id="@+id/sm_p22"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="22" />

                <CheckBox
                    android:id="@+id/sm_p23"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="23" />

                <CheckBox
                    android:id="@+id/sm_p_all"
                    style="@style/pointTimeCheckboxStyle"
                    android:text="全部" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="140dp"
            android:layout_height="wrap_content">

        </View>

        <View
            android:layout_width="@dimen/form_padding"
            android:layout_height="wrap_content">

        </View>

        <Button
            android:id="@+id/btnConfirmMeasureConfig"
            style="@style/toolButtonStyle"
            android:text="保存" />

        <View
            android:layout_width="@dimen/form_padding"
            android:layout_height="wrap_content">

        </View>

        <Button
            android:id="@+id/btnCancelMeasureConfig"
            style="@style/toolButtonStyle"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>
