<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时的背景图片 -->
    <item android:color="@android:color/transparent" android:drawable="@drawable/ic_history" android:state_window_focused="false" />
    <item android:color="@color/colorPrimary" android:drawable="@drawable/ic_history" android:state_pressed="true" />
    <item android:color="@android:color/black" android:drawable="@drawable/ic_history" android:state_focused="true" />
    <!-- 默认时的背景图片-->
    <item android:color="@android:color/transparent" android:drawable="@drawable/ic_history" />
</selector>

